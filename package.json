{
  "name": "cookbook",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "description": "AI powered cookbook with recipes for every occasion",
  "scripts": {
    "build": "pnpm --filter @cookbook/app build",
    "build:node": "docker build -f ./Dockerfile.node -t  ghcr.io/galvanized-solutions/cookbook/node:22-alpine .",
    "build:ubuntu": "docker build -f ./Dockerfile.ubuntu -t  ghcr.io/galvanized-solutions/cookbook/ubuntu:22.04 . ",
    "run:ubuntu": "docker run --platform=linux/arm64 -it ghcr.io/galvanized-solutions/cookbook/ubuntu:22.04 /bin/sh",
    "run:node": "docker run --platform=linux/arm64 -it ghcr.io/galvanized-solutions/cookbook/ubuntu:22.04 /bin/bash",
    "start": "pnpm --filter @cookbook/app start",
    "clear": "pnpm --filter @cookbook/app clear",
    "run-fetch": "node ./scripts/run-fetch.js"
  },
  "dependencies": {
    "@docusaurus/core": "3.8.1",
    "@docusaurus/preset-classic": "3.8.1",
    "@mdx-js/react": "^3.0.0",
    "clsx": "^2.0.0",
    "dotenv": "^17.2.1",
    "prism-react-renderer": "^2.3.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@docusaurus/module-type-aliases": "3.8.1",
    "@docusaurus/tsconfig": "3.8.1",
    "@docusaurus/types": "3.8.1",
    "@playwright/test": "^1.55.0",
    "@types/node": "^24.3.1",
    "typescript": "~5.6.2"
  },
  "browserslist": {
    "production": [
      ">0.5%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 3 chrome version",
      "last 3 firefox version",
      "last 5 safari version"
    ]
  },
  "engines": {
    "node": ">=22.0"
  }
}
