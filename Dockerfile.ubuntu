FROM --platform=$BUILDPLATFORM ubuntu:22.04

# Set environment variables
ENV DEBIAN_FRONTEND=noninteractive
ENV NODE_VERSION=22

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    wget \
    gnupg \
    vim \
    git \
    tar \
    jq \
    ca-certificates \
    apt-transport-https \
    software-properties-common \
    && rm -rf /var/lib/apt/lists/*

# Install Node.js (matching package.json engines requirement)
RUN curl -fsSL https://deb.nodesource.com/setup_22.x | bash - \
    && apt-get install -y nodejs 

# Chrome dependencies are installed above
# Let puppeteer download and manage its own Chromium

# Install pnpm
RUN npm install -g pnpm

# Set working directory
WORKDIR /workspace

# Copy workspace config and package files
COPY ./pnpm-workspace.yaml ./package.json ./pnpm-lock.yaml ./

RUN --mount=type=cache,target=/pnpm-store pnpm install --frozen-lockfile

RUN  pnpm playwright install chromium --with-deps

COPY ./scripts ./scripts

LABEL org.opencontainers.image.title="Cookbook Claude Dependencies"
LABEL org.opencontainers.image.description="Ubuntu 22.04 image with Node.js dependencies for cookbook project"
LABEL org.opencontainers.image.source="https://github.com/galvanized-solutions/cookbook"